{% extends 'admin/main.twig' %}
{% block admincontent %} 

<div class="row">
    <div class="col-md-12">
        <div class="overview-wrap">
            <h2 class="title-1">Yeni yazı</h2>
            <a href="{{path_for('posts')}}">siyahıya qayıtmaq →</a>
        </div>
    </div>
</div>

<div class="row m-t-10">
<div class="col-lg-12">
        <div class="card">
        
        <form action="{{path_for('addpost')}}" method="post">
            
            <div class="card-header">
                Yeni yazının əlavə edilməsi forması
            </div>

            <div class="card-body card-block">

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group ">
                            <label for="company" class=" form-control-label">Yazının başlığı</label>
                            <input type="text" 
                                placeholder="Başlığı daxil edin"
                                class="form-control"
                                name="pagetitle"
                                required>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="company" class=" form-control-label">Kateqoriya</label>
                            <select class="form-control" name="category">
                                <option selected disabled>Kateqoriya seçin</option>
                                <option value="aboutus">Şirkət haqqında</option>
                                <option value="services">Xidmətlərimiz</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="company" class=" form-control-label">Yazı mətni</label>
                    <textarea rows="4"
                              class="form-control summernote"
                              name="pagetext"
                              required></textarea>
                </div>
                

            </div>
            
            <div class="card-footer">
                <button type="submit" class="btn btn-primary btn-sm">
                    <i class="fa fa-dot-circle-o"></i> Dərc etmək
                </button>
            </div>
        </form>
     </div>
</div>
 </div>
{% endblock %}