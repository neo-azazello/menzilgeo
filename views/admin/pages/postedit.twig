{% extends 'admin/main.twig' %}
{% block admincontent %}

    <div class="row">
        <div class="col-md-12">
            <div class="overview-wrap">
                <h2 class="title-1">Yazının redaktəsi</h2>
                <a href="{{path_for('posts')}}">siyahıya qayıtmaq →</a>
            </div>
        </div>
    </div>

    <div class="row m-t-10">
        <div class="col-lg-12">
            <div class="card">

                <form action="{{path_for('updatepost')}}" method="post">

                    <div class="card-header">
                        Mövcud yazının redaktəsi forması
                    </div>

                    <div class="card-body card-block">

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group ">
                                    <label for="company" class=" form-control-label">Yazının başlığı</label>
                                    <input type="text"
                                           placeholder="Başlığı daxil edin"
                                           class="form-control"
                                           name="pagetitle"
                                           value="{{ post.pagetitle }}"
                                           required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="company" class=" form-control-label">Kateqoriya</label>
                                    <select class="form-control" name="category" >
                   <option value="home" {% if post.category == 'home' %} selected{% endif %}>Əsas səhifə</option>
                   <option value="aboutus" {% if post.category == 'aboutus' %} selected{% endif %}>Şirkət haqqında</option>
                   <option value="services" {% if post.category == 'services' %} selected{% endif %}>Xidmətlərimiz</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="company" class=" form-control-label">Yazı mətni</label>
                            <textarea rows="4"
                                      class="form-control summernote"
                                      name="pagetext"
                                      required>{{ post.pagetext }}</textarea>
                        </div>
                        <input type="hidden" name="pageid" value="{{ post.pageid }}">


                    </div>

                    <div class="card-footer">
                        <button type="submit" class="btn btn-danger btn-sm">
                            <i class="fa fa-dot-circle-o"></i> Yeniləmək
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}