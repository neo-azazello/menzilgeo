{% extends 'admin/main.twig' %}
{% block admincontent %}

    <div class="row">
        <div class="col-md-12">
            <div class="overview-wrap">
                <h2 class="title-1">Bütün yazılar </h2>
                <a href="{{ path_for('addpost') }}">
                    <button class="btn btn-success item">
                        <i class="zmdi zmdi-plus-circle"></i> Yeni yazı
                    </button>
                </a>
            </div>
        </div>
    </div>

    <div class="row m-t-10">

        <div class="col-lg-12">
            <div class="table-responsive table--no-card m-b-40">
                <table class="table table-borderless table-striped table-earning">
                    <thead>
                    <tr>
                        <th>№</th>
                        <th>Başlıq</th>
                        <th>Kateqoriya</th>
                        <th>Əməliyyatlar</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for post in posts %}
                        <tr>
                            <td>{{ post.pageid }}</td>
                            <td>{{ post.pagetitle }}</td>
                            <td class="text-center">
                                {% if post.category == 'home' %}Əsas səhifə{% endif %}
                                {% if post.category == 'aboutus' %}Şirkət haqqında{% endif %}
                                {% if post.category == 'services' %}Xidmələrimiz{% endif %}
                                {% if post.category == 'projects' %}Layihələrimiz{% endif %}
                            </td>
                            <td>
                                <div class="table-data-feature">
                                    <a href="{{ base_url() }}/admin/post/edit/{{ post.pageid }}">
                                        <button class="item">
                                            <i class="zmdi zmdi-edit"></i>
                                        </button>
                                    </a>

                                    <a href="#"
                                       data-href="{{ base_url() }}/admin/post/delete/{{ post.pageid }}"
                                       data-toggle="modal" data-target="#confirm-delete" class="delete-button">
                                        <button class="item">
                                            <i class="zmdi zmdi-delete"></i>
                                        </button>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}